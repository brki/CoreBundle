<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }} | CMF Sandbox</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        {% block includes %}
            <link href="/bundles/symfonycmfcore/css/style.css" media="screen" type="text/css" rel="stylesheet" />
        {% endblock %}

        {% block top_scripts %}
        {% endblock %}
    </head>
    <body>
        <div id="header">
            {% block header %}
                {% include "SymfonyCmfCoreBundle:Default:header.html.twig" %}
            {% endblock %}
        </div>
        <div id="navigation">
            {% block navigation %}
                {% include "SymfonyCmfCoreBundle:Default:navigation.html.twig" %}
            {% endblock %}
        <div id="content">
            <div class="inner">
                {% block content %}
                {% endblock %}
            </div>
        </div>

        <div id="footer">
            <div class="inner">
                {% block footer %}
                    {% include "SymfonyCmfCoreBundle:Default:footer.html.twig" %}
                {% endblock %}
            </div>
        </div>

        {% block bottom_scripts %}
        {% endblock %}
    </body>
</html>
